<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <LinearLayout
        android:background="#FAFAD2"
        android:layout_width="380dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:text="제품 이름 : "/>

        <TextView
            android:id="@+id/guestItemInfo_item_name"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/guestItemInfo_item_img"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/choco" />

    <LinearLayout
        android:background="#FAFAD2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:background="#FAFAD2"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="90dp"
            android:textSize="20dp"
            android:text="가격 : "/>

        <TextView
            android:id="@+id/guestItemInfo_item_price"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#FAFAD2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종류 : "
            android:textColor="#000000"
            android:layout_marginLeft="90dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/guestItemInfo_item_type"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp" />

    </LinearLayout>
    <LinearLayout
        android:background="#FAFAD2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="90dp"
            android:textSize="20dp"
            android:text="재고: "/>

        <TextView
            android:id="@+id/guestItemInfo_item_quantity"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp" />
    </LinearLayout>


</LinearLayout>