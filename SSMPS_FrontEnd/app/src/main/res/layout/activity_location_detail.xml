<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".location.LocationDetailActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="물건 등록"
        android:textSize="23sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/locationDetail_search_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="물건 이름을 입력하세요" />


        <ImageButton
            android:id="@+id/locationDetail_search_btn"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY" />

    </LinearLayout>

    <TextView
        android:id="@+id/locationDetail_item1"
        android:text="물건1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/locationDetail_item2"
        android:text="물건2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/locationDetail_item3"
        android:text="물건3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>